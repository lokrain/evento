{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!src/app/globals.css",
      "!node_modules",
      "!.next",
      "!dist",
      "!build",
      "!coverage",
      "!**/*.generated.*"
    ]
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 100,
    "useEditorconfig": true,
    "attributePosition": "auto"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error",
        "noUnreachable": "error"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noArrayIndexKey": "error",
        "noConfusingVoidType": "error",
        "noDoubleEquals": "error",
        "noUnsafeNegation": "error",
        "noUnknownAtRules": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "style": {
        "useConst": "error",
        "useTemplate": "error",
        "useImportType": "error"
      }
    },
    "domains": {
      "react": "recommended",
      "next": "recommended"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "recommended": true
      }
    }
  }
}
